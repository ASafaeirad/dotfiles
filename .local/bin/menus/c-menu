#!/usr/bin/env bash

VISUAL=code
source "$HOME/.local/bin/menus/_menu"

LIST=(
  Hyprland
  Awesome
  Waybar
  Sxhkd
  Bin
  Rofi
  Menus
  XInit
  Alacritty
)

SELECTED=$(print_list "${LIST[@]}" | _dmenu -i -p "Configs")

case "$SELECTED" in
Nix)
  $VISUAL ~/.config/nix
  ;;
Sxhkd)
  $VISUAL ~/.config/sxhkd/sxhkdrc
  ;;
Hyprland)
  $VISUAL ~/.config/hypr
  ;;
Waybar)
  $VISUAL ~/.config/waybar
  ;;
Rofi)
  $VISUAL ~/.config/rofi/
  ;;
Bin)
  $VISUAL ~/.local/bin/
  ;;
Menus)
  $VISUAL ~/.local/bin/menus
  ;;
Awesome)
  $VISUAL ~/.config/awesome
  ;;
XInit)
  $VISUAL ~/.config/X11/xinitrc
  ;;
Alacritty)
  $VISUAL ~/.config/alacritty
  ;;
esac
