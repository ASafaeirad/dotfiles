#!/usr/bin/env bash

source "$HOME/.local/bin/menus/_menu"
shopt -s nullglob globstar

if [[ $1 == "--type" ]]; then
    TYPE=1
    shift
fi

PASS_DIR=${PASSWORD_STORE_DIR-~/.password-store}
PASS_FILES=("$PASS_DIR"/**/*.gpg)
RELATIVE_FILENAMES=("${PASS_FILES[@]#"$PASS_DIR"/}")
LIST=("${RELATIVE_FILENAMES[@]%.gpg}" "otp")
COMMAND="pass show"


PASSWORD=$(print_list "${LIST[@]}" | _dmenu -p "Password" "$@")

[[ -n $PASSWORD ]] || exit
if [[ $PASSWORD = "otp" ]]; then
    COMMAND="pass otp"
    PASSWORD=$(print_list "${LIST[@]}" | _dmenu -p "OTP" "$@")
fi

$COMMAND -c "$PASSWORD" | head -n1 2>/dev/null

if [[ $TYPE -eq 1 ]]; then
    passw=$($COMMAND $PASSWORD | head -n1)
    xdotool type $passw
fi
