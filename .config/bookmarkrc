alias g='open_d "https://github.com/frontendmonster"'
alias gcodeit='open_d "https://github.com/fullstacksjs/codeit"'
gmail() {
	local GU=${1:-'0'}
	open_d "https://mail.google.com/mail/u/$GU/"
}

DEVS="$HOME/devs"
alias tg='cd $HOME/downloads/Telegram\ Desktop'
alias dwn='cd $HOME/downloads'
