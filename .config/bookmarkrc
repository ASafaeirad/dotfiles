alias docs='cd $HOME/docs/'
alias books='cd $HOME/docs/books'

INFO="$HOME/docs/info"
alias cards='vim $INFO/card.yml'
alias infos='vim $INFO/info.yml'

alias libs='cd $DEVS/libs'
alias devs='cd $DEVS/projects'
alias rewire='cd $DEVS/rewire'

alias fem='cd $DEVS/projects/fullstacks'
alias bot='cd $DEVS/projects/guardian'
alias sm='cd $DEVS/smartsept/'
alias sma='cd $DEVS/smartsept/app'

FSK="$DEVS/fullstacks"
alias f='cd $FSK'
alias fdev='cd $FSK/projects'
alias fexp='cd $FSK/exploration'
alias codeit='cd $DEVS/projects/codeit'

EG="$DEVS/eg"
alias eg='cd $EG'
alias sus='cd $EG/eg-frontend'

EG_GUSER=1
alias cal='open_d "https://calendar.google.com/calendar/u/$EG_GUSER/r"'
alias docs='open_d "https://user.staging.estateguru.co/documentation/index.html"'
alias invs='open_d "https://projects.invisionapp.com/d/main#/console/21667879/458543491/preview"'
